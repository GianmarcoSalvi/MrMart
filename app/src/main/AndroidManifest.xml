<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytrueapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProdottoGenerico"
            android:label=""
            android:parentActivityName=".CategoriaGenerica">
        </activity>
        <activity
            android:name=".CategoriaGenerica"
            android:label="Frutta"
            android:parentActivityName=".CatergorieSupermercati" />
        <activity
            android:name=".CatergorieSupermercati"
            android:label="Elite"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"> <!-- Serve per non far andar sopra bottom bar e far vedere ricerca -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>